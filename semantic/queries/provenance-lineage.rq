# provenance-lineage.rq — Trace data lineage from resource to source
#
# For each resource that has provenance, shows:
#   resource → pipeline run → source export → source system
#
# This is the "where did this data come from?" query.

PREFIX prov:    <http://www.w3.org/ns/prov#>
PREFIX apercue: <https://apercue.ca/vocab#>
PREFIX rdfs:    <http://www.w3.org/2000/01/rdf-schema#>

SELECT ?resource ?resourceName ?activity ?activityLabel
       ?source ?sourceSystem ?sourceHash ?exportTime
WHERE {
    ?resource a apercue:Resource ;
              apercue:name ?resourceName ;
              prov:wasGeneratedBy ?activity .
    ?activity rdfs:label ?activityLabel ;
              prov:used ?source .
    ?source a apercue:SourceExport ;
            apercue:sourceSystem ?sourceSystem .
    OPTIONAL { ?source apercue:contentHash ?sourceHash }
    OPTIONAL { ?source prov:generatedAtTime ?exportTime }
}
ORDER BY ?resourceName ?sourceSystem
